// A Devcontainer for demoing the Stencila VSCode extension
//
// For format details see https://containers.dev/implementors/json_reference/.
{
  "build": { "dockerfile": "Dockerfile" },
  "secrets": {
    "STENCILA_API_TOKEN": {
      "description": "If you have a Stencila Cloud API token, enter it here to enable Cloud features, or add one later via the Stencila menu within the Codespace",
      "documentationUrl": "https://stencila.cloud/access-tokens"
    }
  },
  "hostRequirements": {
    "memory": "16gb"
  },
  "customizations": {
    "vscode": {
      "extensions": ["stencila.stencila"],
      "settings": {
        // See here for VSCode settings and their defaults
        // https://code.visualstudio.com/docs/getstarted/settings#_default-settings
        "files.associations": {
          "*.md": "smd"
        },
        "[smd]": {
          "editor.wordWrap": "on"
        },
        "[myst]": {
          "editor.wordWrap": "on"
        }
      }
    }
  }
}
